#include <iostream>
#include <cstdlib>

using namespace std;

/* What Can I Use This Program For?:
 * - Macronutrients Tracker
 * - eBay Selling 
 * - Workout Sessions Comparison
 * - Grocery List Prices Calculator
 * - Paycheck Calculator
 * - Monthly Goals Planner
 * - 
 */
int main(int argc, char** argv) {
    
    // variable declaration
    int year;
    int month;
    int decision;
    
    // beginning prompts
    cout << "Welcome to Shazeb's Monthly Goals Program\n";
    cout << "-----------------------------------------\n";
    cout << "Enter a year no earlier than 2019 and no later than 2025: ";
    cin >> year;
    while (year < 2019 || year > 2025)
    {
        cout << "Error! Enter a year no earlier than 2019 and no later than 2025: ";
        cin >> year;
    }
    
    // year 2019 
    if (year == 2019)
    {
        cout << "Enter a month(1-12): ";
        cin >> month;
        while (month < 10 || month > 12)
        {
            cout << "Error! Program was created 9/24/19 so enter either month 10, 11, or 12: ";
            cin >> month;
        }
        
        if (month == 10)
        {
            cout << "\nYou chose October! What action would you like to take?\n";
            cout << "-To display monthly goals: enter '1'\n";
            cout << "-To add a monthly goal: enter '2'\n";
            cout << "-To end program: enter '0'\n";
            cin >> decision;
            if (decision != 1 && decision != 2 && decision != 0)
            {
                cout << "\nWrong input! Program failed...";
                return 1;
            }       
        }
        
    }
    
    // end program
    cout << endl;
    cout << "Program Ended Successfully!";
    return 0;
}
